@model Tourtech.Models.Product.ProductViewModel

@Html.Partial("_Banner", Model)

@section Meta{
    @Html.Partial("_MetaSection", Model)
}

<div class="container">
    @Html.Partial("_Breadcrumb", Model.Breadcrumb)
    @Html.Partial("_LineHeading", Model.MainHeading)
    @Html.Partial("_ContentSections", Model.ContentSections)

    <div class="product-overview">
        <div class="row">
            
            <div class="col-md-6 col-12 slider-column">
                <ul class="js-products-slider products-slider">
                    @foreach (var image in Model.GalleryImages)
                    {
                        <li>
                            <img src="@image.ImageUrl" alt="@image.Title" />
                        </li>
                    }
                </ul>
                <ul class="js-products-slider-nav products-slider-nav">
                    @foreach (var image in Model.GalleryImages)
                    {
                        <li>
                            <img src="@image.ImageUrl" alt="@image.Title" />
                        </li>
                    }
                </ul>
            </div>

            <div class="col-md-6 col-12 content-column">

                <h3>Technical specs and features</h3>
                <ul class="features">
                    @foreach (var feature in Model.Features)
                    {
                        <li>
                            @feature
                        </li>
                    }
                </ul>
              
                <a href="@Url.Action("Index", "WhereToBuy")" class="button-outline larger">
                    <strong>
                        Where to buy
                    </strong>
                    <span>
                        Find your local dealer in store and online
                    </span>
                </a>

            </div>
        </div>
    </div>
</div>