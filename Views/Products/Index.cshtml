@model Tourtech.Models.Products.ProductsViewModel

@Html.Partial("_Banner", Model)

@section Meta{
    @Html.Partial("_MetaSection", Model)
}

<div class="products-page container">
    @Html.Partial("_Breadcrumb", Model.Breadcrumb)
    @Html.Partial("_LineHeading", "Full TOURTECH Range")
    <ul class="products row"> 
        @foreach(var category in Model.Categories)
        {
            <li class="product col-lg-3 col-md-4 col-sm-6 col-12 @(category.ComingSoon ? "coming-soon" : "") ">
                <a href=@category.LinkUrl>
                    <div class="image-wrap">
                        <img src="@category.ImageUrl" alt="@category.Title">
                    </div>
                    <span class="button-outline">
                        @category.Title
                    </span>
                </a>
            </li>
        }
    </ul>
</div>



